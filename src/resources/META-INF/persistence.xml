<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="mars">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>org.pirateatbay.mars.model.Agendamento</class>
		<class>org.pirateatbay.mars.model.Atendimento</class>
		<class>org.pirateatbay.mars.model.Curso</class>
		<class>org.pirateatbay.mars.model.Discente</class>
		<class>org.pirateatbay.mars.model.EnderecoPessoa</class>
		<class>org.pirateatbay.mars.model.Especialista</class>
		<class>org.pirateatbay.mars.model.Participante</class>
		<class>org.pirateatbay.mars.model.Pessoa</class>
		<class>org.pirateatbay.mars.model.Polo</class>
		<class>org.pirateatbay.mars.model.Usuario</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mars" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
		</properties>
	</persistence-unit>
</persistence>
